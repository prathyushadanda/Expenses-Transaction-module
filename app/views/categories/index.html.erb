<%= link_to 'New Category', new_category_path, class: "btn btn-default pull-right" %>
<h1>Listing Categories</h1>

<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Source</th>
    <th>Description</th>
    <th>Type</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.source %></td>
        <td><%= category.description %></td>
        <td><%= category.type %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-pencil">'.html_safe, edit_category_path(category), class: "btn btn-default" %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash">'.html_safe, category_path(category), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>
