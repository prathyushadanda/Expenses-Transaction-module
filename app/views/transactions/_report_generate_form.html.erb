<% if action_name == 'bank_statement' %>
    <% url = generate_bank_statement_transactions_path %>
    <% heading = 'Bank Statement' %>
<% else %>
    <% url = generate_reports_transactions_path %>
    <% heading = 'Transaction Reports' %>
<% end %>
<h1><%= heading %></h1>
<%= form_tag(url) do |f| %>
    <div class="row">
      <div class="col-md-3">
        <label for="start_date">Start Date</label>

        <div class="input-group">
          <%= text_field_tag :start_date, nil, required: true, class: 'form-control date' %>
        </div>
      </div>

      <div class="col-md-3">
        <label for="end_date">End Date</label>
        <div class="input-group">
          <%= text_field_tag :end_date, nil, required: true, class: 'form-control date' %>
        </div>
      </div>
    </div>
    </br>
    <div class="footer">
      <button type="submit" class="btn btn-default">Submit</button>
      <%= link_to 'Back', transactions_path, class: "btn btn-default" %>
    </div>
<% end %>


<script type="text/javascript">
    $(function(){
        $('.date').datepicker({
            autoclose: true,
            format: 'dd/mm/yyyy'

        });
    });
</script>