<style>
  .margin-left-20{
      margin-left: 20px;
  }
</style>
<%= link_to 'New Income', "#{new_transaction_path}?type=Income", class: "btn btn-default pull-right margin-left-20" %>
<%= link_to 'New Expense', "#{new_transaction_path}?type=Expense", class: "btn btn-default pull-right margin-left-20" %>
<%= link_to 'Transaction Reports', expense_reports_transactions_path, class: "btn btn-default pull-right margin-left-20" %>
<%= link_to 'Bank Statement', bank_statement_transactions_path, class: "btn btn-default pull-right" %>

<h1>Listing Transactions</h1>


<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Date</th>
    <th>Amount</th>
    <th>category</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.date.strftime("%d/%m/%Y") %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.category.source %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-pencil">'.html_safe, edit_transaction_path(transaction), class: "btn btn-default" %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-trash">'.html_safe, transaction_path(transaction), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>



